{
   "compilerOptions": {
      "esModuleInterop": true,
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "paths": {
         "@/*": [
            "./src/*"
         ],
      }
   },
   "include": [
      "./src"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "./tests"
   ]
}